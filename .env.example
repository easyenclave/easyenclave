# === Control Plane ===
LISTEN_ADDR=0.0.0.0:8080
DB_PATH=easyenclave.db
BUILTIN_AGGREGATOR=true
RUST_LOG=info

# === Intel Trust Authority ===
ITA_API_URL=https://api.trustauthority.intel.com/appraisal/v2
ITA_API_KEY=

# === Attestation Policy ===
TCB_ENFORCEMENT_MODE=strict          # strict|warn|disabled
ALLOWED_TCB_STATUSES=UpToDate        # comma-separated
NONCE_ENFORCEMENT_MODE=required       # required|optional|disabled

# === Cloudflare (tunnels + DNS) ===
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_ID=
EASYENCLAVE_DOMAIN=easyenclave.io

# === GitHub OAuth (identity layer) ===
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
GITHUB_OAUTH_REDIRECT_URI=
ADMIN_GITHUB_LOGINS=                 # comma-separated GitHub usernames

# === Trusted Aggregators ===
TRUSTED_AGGREGATOR_IDS=              # comma-separated aggregator UUIDs (built-in is always trusted)

# === Billing / BTCPay (optional, StubProvider used if unset) ===
BTCPAY_URL=
BTCPAY_API_KEY=
BTCPAY_STORE_ID=
BTCPAY_WEBHOOK_SECRET=

# === GitHub Releases (MRTD source, optional with trusted aggregator observer) ===
RELEASE_REPO=                        # e.g. org/easyenclave
