#!/bin/bash
# Final cleanup for reproducible rootfs contents.
# Runs outside the image; target rootfs is provided by mkosi.
set -euo pipefail

ROOT="${1:-${BUILDROOT:-/buildroot}}"

# Runtime can recreate these; they should not be baked with build-time entropy.
rm -f "$ROOT/var/cache/ldconfig/aux-cache"
if [ -d "$ROOT/var/log" ]; then
    find "$ROOT/var/log" -type f -delete
fi
